@model IEnumerable<WebSite.ViewModels.TeachersViewModel.TeachersViewModel>

@{
    ViewBag.Title = "Teachers";
}
@section Scripts
{
    @Scripts.Render("~/bundles/searchjs")
}
<h2 class="fontTU">Teachers</h2>
<div class="alert alert-info alert-dismissable">
    <a class="panel-close close" data-dismiss="alert">×</a>
    <i class="fa fa-coffee"></i>
    <strong>Quick and easy way</strong> to find and establish connection with people who share the  same interests as yours. For example you can search by company name or concrete programming language.
</div>
<div class="form-group pull-right">
    <input type="text" class="search form-control" placeholder="What you looking for?">
</div>
<div class="tableFrame" style="clear: left; overflow: auto; height: 560px; width: 700px">
    <table class="table table-hover table-bordered results fontTU" style="background:white; width:682px ;color:black">
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="background-color:#b7b7b7">
                    <td class="col-xs-12 col-sm-6 col-md-6">
                        <div class="well well-sm">
                            <div class="row">
                                <div class="col-sm-6 col-md-4">
                                    <img src="@Url.Action("GetImage", "Teachers", new { item.ID })" alt="" class="img-rounded img-responsive" />
                                </div>
                                <div class="col-sm-6 col-md-8">
                                    <h4>
                                        @item.FirstName @item.LastName
                                    </h4>
                                    <p>
                                        <i class="glyphicon glyphicon-tent"></i> Department: @item.Department
                                        <br />
                                    </p>
                                    <p>
                                        <i class="glyphicon glyphicon-education"></i> Education: @item.Education
                                        <br />
                                    </p>
                                    <p>
                                        <i class="glyphicon glyphicon-heart-empty"></i> Scientific Interests: @item.ScientificInterests
                                        <br />
                                    </p>
                                    <p>
                                        <i class="glyphicon glyphicon-envelope"></i> @item.Email
                                        <br />
                                    </p>
                                    <p>
                                        <i class="glyphicon glyphicon-earphone"></i> Phone Number: @item.PhoneNumber
                                        <br />
                                    </p>
                                    <p>
                                        <i class="glyphicon glyphicon-record"></i> Pesonal cabinet: @item.PersonalCabinet
                                        <br />
                                    </p>
                                    <p>
                                        <i class="glyphicon glyphicon-sunglasses"></i> Visiting Hours: @item.VisitingHours
                                        <br />
                                    </p>
                                    <p>
                                        <i class="glyphicon glyphicon-tasks"></i> Тeaching in: @item.Courses
                                        <br />
                                    </p>
                                    <hr />
                                    @foreach (var discpiline in item.Disciplines)
                                    {
                                        <p>
                                            <i class="glyphicon glyphicon-book" style="padding-left:4px"></i> @discpiline
                                            <br />
                                        </p>
                                    }
                                    <!-- Split button -->
                                    @*<div class="btn-group">
                                        <button type="button" class="btn btn-primary">
                                            Social
                                        </button>
                                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                            <span class="caret"></span><span class="sr-only">Social</span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="@item.Linkedin">LinkedIn</a></li>
                                            <li><a href="@item.FacebookAcc">Facebook</a></li>
                                        </ul>
                                    </div>*@
                                </div>
                            </div>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>


