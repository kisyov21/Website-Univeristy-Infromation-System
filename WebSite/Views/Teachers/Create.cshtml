@model WebSite.ViewModels.TeachersViewModel.TeachersViewModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Teachers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container fontTU">
        @*<h1 class="page-header">Edit Profile</h1>*@
        @*<div class="page-header">
            <input class="btn btn-primary" value="Disciplines" type="button" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");">
        </div>*@
