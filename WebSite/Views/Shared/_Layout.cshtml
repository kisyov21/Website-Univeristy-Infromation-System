<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fullcalendarcss")

</head>
<body>
    <div class="body-header">
        <div style="width:1158px; margin-left:auto; margin-right:auto; padding-bottom: 10px">
            <img class="headerLogo" src="~/Content/Images/headerLogo.png" alt="Head" style="max-height:80px"/>
        </div>
    </div>
    <div class="body-content">
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink(" ", "Index", "Home", new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink(" ", "Index", "Home", new { @class = "logo" })</li>
                        <li class="nav-text">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="nav-text">@Html.ActionLink("About", "About", "Home")</li>
                        <li class="nav-text">@Html.ActionLink("Students", "Students", "Home")</li>
                        <li class="nav-text">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Technical University of Povdiv</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/fullcalendarjs")
    @Scripts.Render("~/bundles/bootstrap")
    
    @RenderSection("scripts", required: false)
</body>
</html>
